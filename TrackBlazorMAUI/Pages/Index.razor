@page "/"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>Main Page</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="main_screen col-12 col-sm-12 col-md-12 col-lg-12">
                <div class="background_image"></div>
                <div class="phone_header">
                    <div class="phone_status">
                        <div class="phone_status_bar"></div>
                    </div>
                </div>
                <div class="main_center_text">
                    <div class="welcome_center_text">
                        <p>Welcome to Tracker Map</p>
                    </div>
                    <div class="go_center_text">
                        <p>Let's Go</p>
                    </div>
                </div>
                <div class="main_buttons">
                    <div class="signin_button_path">
                        <a href="Login.html" class="signin_button">
                            <div class="button_graph_group">
                                <div class="button_half_round_black">
                                </div>
                            </div>
                            <div class="signin_button_text col-6 col-sm-6 col-md-6 col-lg-6">
                                <p>SIGN IN</p>
                            </div>
                        </a>
                    </div>
                    <div class="signup_button_path">
                        <a href="createAccount.html" class="signup_button">
                            <div class="button_graph_group">
                                <div class="button_half_round_white">
                                </div>
                            </div>
                            <div class="signup_button_text col-6 col-sm-6 col-md-6 col-lg-6">
                                <p>SIGN UP</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>
</html>